<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liuym.nssy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.liuym.nssy.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liuym.nssy.TeacherActivity"
            android:label="@string/title_activity_teacher"
            android:screenOrientation="sensorPortrait" >
        </activity>
        <activity
            android:name="com.liuym.nssy.TeacherRepair"
            android:label="@string/title_activity_teacher_repair"
            android:screenOrientation="sensorPortrait" >
        </activity>
        <activity
            android:name="com.liuym.nssy.Ibeacon"
            android:label="@string/title_activity_ibeacon"
            android:screenOrientation="sensorPortrait" >
        </activity>
    </application>

    <supports-screens
        android:smallScreens="true" 
        android:normalScreens="true" 
        android:largeScreens="true" 
        android:anyDensity="true"
    />

</manifest>